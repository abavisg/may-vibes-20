# CFP Scout Configuration
# Copy this file to .env and fill in your actual values

# Ollama Configuration (for local LLM processing)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:1.5b

# User Interests (comma-separated keywords for filtering CFPs)
USER_INTERESTS=AI,machine learning,artificial intelligence,engineering leadership,fintech,developer experience,software architecture,cloud computing,DevOps,data science

# Email Configuration (for notifications)
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
TO_EMAIL=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Schedule Configuration (for automated runs)
SCHEDULE_TIME=08:00
TIMEZONE=Europe/London

# Optional: MCP Configuration
MCP_HOST_PORT=3000
MCP_LOG_LEVEL=INFO 