# CFP Scout Configuration
# Copy this file to .env and fill in your actual values

# Ollama Configuration (for local LLM processing)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:1.5b

# User Interests (comma-separated keywords for filtering CFPs)
USER_INTERESTS=AI,machine learning,artificial intelligence,engineering leadership,fintech,developer experience,software architecture,cloud computing,DevOps,data science

# Email Configuration (choose ONE method)

# Method 1: Mailgun (Recommended for production - no personal passwords)
# Sign up at https://www.mailgun.com/ for free tier (1000 emails/month)
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_FROM_EMAIL=CFP Scout <noreply@your-domain.mailgun.org>
TO_EMAIL=recipient@example.com

# Method 2: SMTP (Gmail, Outlook, etc. - requires app password)
# EMAIL_ADDRESS=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password_here
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# TO_EMAIL=recipient@example.com

# Schedule Configuration (for automated runs)
SCHEDULE_TIME=08:00
TIMEZONE=Europe/London
EXECUTION_MODE=hybrid

# Optional: MCP Configuration
MCP_HOST_PORT=3000
MCP_LOG_LEVEL=INFO 